#Setting prompt
PROMPT_DIRTRIM=3
export PS1=" \[\033[95;38;5;202m\]\w\n\[\033[95;38;5;027m\][\[\033[95;38;5;154m\] \h -> \u \[\033[95;38;5;127m\]: \@ \[\033[95;38;5;027m\]] \[\033[95;38;5;202m\]> \[$(tput sgr0)\]"

export CLICOLOR=1
export LSCOLORS=ExFxBxDxCxegedabagacad

#Setting history size
unset HISTFILESIZE
HISTSIZE=20000
PROMPT_COMMAND="history -a"
export HISTSIZE PROMPT_COMMAND

shopt -s histappend

#Set default editor to VI
export EDITOR=vim
